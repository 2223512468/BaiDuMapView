            android:name="com.baidu.lbsapi.API_KEY"
            android:value="rRvPKDZ5juLgYjacNNhGN9mUKUZD0vfM" />

        <activity android:name=".act.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".act.CompassAct" />
        <activity android:name=".act.PoiSearchAct" />
        <activity android:name=".act.BusLineSearchAct" />
        <activity android:name=".routeplan.act.RoutePlanAct" />
        <activity android:name=".act.LocAct" />

        <!-- 声明service组件 -->
        <service
            android:name="com.baidu.location.f"
